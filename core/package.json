{
  "name": "@stylizablez/core",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "doc": "jsdoc ./src -r -c ./jsdoc.conf -d docs",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Joshua DeFord",
  "module": "dist/mylib.esm.js",
  "size-limit": [
    {
      "path": "dist/mylib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mylib.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.11.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "better-docs": "^2.3.2",
    "husky": "^6.0.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "size-limit": "^4.11.0",
    "ts-jest": "^24.3.0",
    "ts-loader": "^9.2.2",
    "ts-node-dev": "1.0.0-pre.44",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "tslint": "^6.0.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.3.2",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "react": "^17.0.2"
  }
}
